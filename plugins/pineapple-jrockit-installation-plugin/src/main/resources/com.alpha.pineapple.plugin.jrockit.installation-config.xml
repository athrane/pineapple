<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:oxm="http://www.springframework.org/schema/oxm"
	xmlns:context="http://www.springframework.org/schema/context"
	
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
			http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    		http://www.springframework.org/schema/oxm 
    		http://www.springframework.org/schema/oxm/spring-oxm-3.0.xsd
    		http://www.springframework.org/schema/context 
    		http://www.springframework.org/schema/context/spring-context-3.0.xsd" >    		

	<!-- Configures pineapple-api -->
	<import resource="classpath:com.alpha.pineapple.api-config.xml" />

	<!-- Configures pineapple-commands-api -->
	<import resource="classpath:com.alpha.pineapple.commands-api-config.xml" />

	<!-- Configures pineapple-process-execution-plugin-support -->
	<import resource="classpath:com.alpha.pineapple.process.execution-config.xml" />

	<!-- Configures pineapple-hamcrest-matchers -->
	<import resource="classpath:com.alpha.pineapple.hamcrest-config.xml" />
                                
	<!-- enable annotation based configuration / dependency injection -->
	<context:annotation-config />
    
	<oxm:jaxb2-marshaller id="unmarshaller" contextPath="com.alpha.pineapple.plugin.jrockit.installation.model"/>

	<!-- define message provider for internationalization  -->
	<bean id="messageProvider" class="com.alpha.pineapple.i18n.PropertyFileMessageProviderImpl">		
    	<property name="basename" value="com.alpha.pineapple.plugin.jrockit.installation-messages"/>
	</bean>	
	    	    
	<!-- define argument builder -->
	<bean id="r27ArgumentBuilder" class="com.alpha.pineapple.plugin.jrockit.installation.argument.R27ArgumentBuilder" />
	<bean id="r28ArgumentBuilder" class="com.alpha.pineapple.plugin.jrockit.installation.argument.R28ArgumentBuilder" />	

	<!-- define commands -->
	<bean id="createR27SilentXmlCommand" class="com.alpha.pineapple.plugin.jrockit.installation.command.CreateR27SilentXmlCommand" scope="prototype" />		
	<bean id="createR28SilentXmlCommand" class="com.alpha.pineapple.plugin.jrockit.installation.command.CreateR28SilentXmlCommand" scope="prototype" />	
	<bean id="testJvmIsInstalledCommand" class="com.alpha.pineapple.plugin.jrockit.installation.command.TestJvmIsInstalledCommand" scope="prototype" />		

	<!-- define configurer objects-->
	<bean id="r27InstallationConfigurer" class="com.alpha.pineapple.plugin.jrockit.installation.configurer.R27InstallationConfigurerImpl" />
	<bean id="r28InstallationConfigurer" class="com.alpha.pineapple.plugin.jrockit.installation.configurer.R28InstallationConfigurerImpl" />	
	    	    
	<!-- definition used by the integration tests.  -->
	<bean id="testOperation" class="com.alpha.pineapple.plugin.jrockit.installation.operation.TestOperation" />			
	<bean id="deployConfiguration" class="com.alpha.pineapple.plugin.jrockit.installation.operation.DeployConfiguration" />	
				    	    	    
</beans>