<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:oxm="http://www.springframework.org/schema/oxm"
	xmlns:context="http://www.springframework.org/schema/context"
	
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
			http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    		http://www.springframework.org/schema/oxm 
    		http://www.springframework.org/schema/oxm/spring-oxm-3.0.xsd
    		http://www.springframework.org/schema/context 
    		http://www.springframework.org/schema/context/spring-context-3.0.xsd" >    		
    
	<!-- Configures pineapple-api -->
	<import resource="classpath:com.alpha.pineapple.api-config.xml" />

	<!-- Configures pineapple-commands-api -->
	<import resource="classpath:com.alpha.pineapple.commands-api-config.xml" />
	
	<!-- Configures pineapple-process-execution-plugin-support -->
	<import resource="classpath:com.alpha.pineapple.process.execution-config.xml" />
	        
	<!-- enable annotation based configuration / dependency injection -->
	<context:annotation-config />
    
	<oxm:jaxb2-marshaller id="unmarshaller" contextPath="com.alpha.pineapple.plugin.weblogic.deployment.model"/>

	<!-- define message provider for internationalization  -->
	<bean id="messageProvider" class="com.alpha.pineapple.i18n.PropertyFileMessageProviderImpl">
    	<property name="basename" value="com.alpha.pineapple.plugin.weblogic.deployment-messages"/>
	</bean>	
	    	
	<!-- define argument builder -->
	<bean id="argumentBuilder" class="com.alpha.pineapple.plugin.weblogic.deployment.argument.ArgumentBuilder" />
	<bean id="fileLocator" class="com.alpha.pineapple.plugin.weblogic.deployment.argument.FileLocatorImpl" />	    	    

	<!-- define deployer: 
		No no-arg constructor is defined., all arguments are injected later on.	
	-->
	<bean id="weblogicDeployer" class="weblogic.Deployer" >
		<constructor-arg value=""/>		
	</bean>
	    	    
	<!-- definition used by the integration tests.  -->
	<bean id="testOperation" class="com.alpha.pineapple.plugin.weblogic.deployment.operation.TestOperation" />		
	<bean id="deployConfiguration" class="com.alpha.pineapple.plugin.weblogic.deployment.operation.DeployConfiguration" />		
	<bean id="undeployConfiguration" class="com.alpha.pineapple.plugin.weblogic.deployment.operation.UndeployConfiguration" />
	<bean id="createReport" class="com.alpha.pineapple.plugin.weblogic.deployment.operation.CreateReport" />		
	    
</beans>